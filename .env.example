# Application Configuration
DEBUG=false
LOG_LEVEL=INFO
SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/boston_analytics

# Redis Configuration  
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600

# Celery Configuration
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# Data Source Configuration
DATA_SOURCE_URL=https://customerExpenses.boston.gov/customerExpensesstore/dump/0b7c9c5f-d1c2-46e7-b738-6ab37a110eef?bom=True

# ML Models Configuration
ML_MODELS_PATH=./models

# CORS Configuration
CORS_ORIGINS=["http://localhost:3000","http://localhost:8080","https://yourdomain.com"]

# Monitoring Configuration
PROMETHEUS_METRICS_ENABLED=true
GRAFANA_ADMIN_PASSWORD=admin

# Performance Configuration
MAX_CONNECTIONS=100
POOL_SIZE=20
POOL_OVERFLOW=30

# Security Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Upload Configuration
MAX_FILE_SIZE=50000000
ALLOWED_EXTENSIONS=["csv","xlsx","json"]

# Backup Configuration
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE_ENABLED=true

# Feature Flags
ENABLE_ML_TRAINING=true
ENABLE_DATA_EXPORT=true
ENABLE_REAL_TIME_ANALYTICS=true
ENABLE_ADVANCED_CACHING=true

# External Services
NOTIFICATION_SERVICE_URL=
EXTERNAL_API_KEY=
WEBHOOK_SECRET=

# Deployment Configuration
ENVIRONMENT=production
HEALTH_CHECK_INTERVAL=30
GRACEFUL_SHUTDOWN_TIMEOUT=30